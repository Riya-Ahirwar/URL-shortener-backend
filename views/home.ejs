<!DOCTYPE html>
<html lang="en">
<head>
     <style>
    body {
      margin: 0;
      min-height: 100vh;
      background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
      padding-top: 40px;
      font-family: "Segoe UI", sans-serif;
      color: #fff;
    }

   .container {
      display: flex;
      width: 100%;   
      max-width: 1200px;   
     min-height: 80vh; 
      gap: 40px;         
      background: #111827;
      border-radius: 14px;
      padding: 25px 30px;
     box-shadow: 0 20px 40px rgba(0,0,0,0.6);
     align-items: flex-start; 
}


    h1 {
      text-align: left;
      margin-bottom: 25px;
      color: #38bdf8;
    }

    form {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    input {
      flex: 1;
      padding: 12px;
      border-radius: 8px;
      border: none;
      outline: none;
    }

    button {
      padding: 12px 18px;
      border-radius: 8px;
      background: #22c55e;
      border: none;
      cursor: pointer;
      font-weight: bold;
    }

    button:hover {
      background: #16a34a;
    }

    .generated {
      background: #1f2937;
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .generated a {
      color: #60a5fa;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }

    th, td {
      padding: 12px;
      text-align: center;
    }

    th {
      background: #374151;
    }

    tr:nth-child(even) {
      background: #1f2937;
    }

    tr:hover {
      background: #334155;
    }

    .url-form {
  max-width: 600px;
  margin: 0 auto 30px auto;
}

.url-label {
  display: block;
  margin-bottom: 8px;
  font-size: 14px;
  color: #cbd5e1;
}

.url-input-group {
  display: flex;
  gap: 10px;
}

.url-input-group input {
  flex: 1;
  padding: 14px;
  border-radius: 10px;
  border: none;
  font-size: 15px;
}


.url-input-group button {
  padding: 14px 22px;
  border-radius: 10px;
  background: #22c55e;
  border: none;
  font-weight: bold;
  cursor: pointer;
}

.url-input-group button:hover {
  background: #16a34a;
}
 .left-panel {
  flex: 1;
  position: sticky;  
  top: 40px;         
  align-self: flex-start;
}
.right-panel {
  flex: 1.3;
   max-height: calc(100vh - 120px);
    overflow-y: auto;
}

  </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
</head>
<body>
<div class="container">

  <!-- LEFT SIDE -->
  <div class="left-panel">
    <h1>URL Shortener</h1>

    <form method="POST" action="/url" class="url-form">
      <label class="url-label">Enter your original URL</label>
      <div class="url-input-group">
        <input
          type="text"
          name="url"
          placeholder="https://example.com"
          required
        />
        <button type="submit">Generate</button>
      </div>
    </form>

    <% if (id) { %>
      <div class="generated">
        <a href="http://localhost:2006/url/<%= id %>" target="_blank">
          http://localhost:2006/url/<%= id %>
        </a>
      </div>
    <% } %>
  </div>

  <!-- RIGHT SIDE -->
  <div class="right-panel">
    <% if (urls && urls.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Sr.No.</th>
            <th>ShortID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < urls.length; i++) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= urls[i].shortId %></td>
              <td><%= urls[i].redirectURL %></td>
              <td><%= urls[i].visitHistory.length %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    <% } %>
  </div>

</div>

</body>
</html>